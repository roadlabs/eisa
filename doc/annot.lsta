:. marcos
	:marco annotlang . lang

		:marco annot-{lang} content file
			:include doc/refs.lsta
			:.
				:title {file}
			:subvar dir ^src$
			:subvar dir ^src[\\/]
			:subvar path ^src([\\/])
			::file doc/%d/%n.html
			::template doc/template.html
			::--annot-{lang} {file}
			:title {file}
			:marco a b i
				:--@ {i}
					::section {i}
					{b}
			:marco i b i
				:--@ {i}
					::section `{i}`
					{b}
			:marco @ b i
				:--@ {i}
					:section 
						{b}
			{content}
	:annotlang js
